<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_quote_24"/>
            <TextView
                android:id="@+id/txt_quote_daily"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorWhite"
                android:fontFamily="serif"
                android:gravity="start|center"
                android:textStyle="italic"
                android:textSize="32sp"/>

            <TextView
                android:id="@+id/txt_author_quote_daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/img_btn_like_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contextClickable="true"
                    android:background="@null"
                    android:src="@drawable/ic_favorite_border_black_24px" />

                <ImageButton
                    android:id="@+id/img_btn_share_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_share_black_24px"
                    android:layout_marginStart="16dp"
                    android:contextClickable="true" />


            </LinearLayout>

        </LinearLayout>